<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- define the list of HBM mapping files -->
    <bean id="org.sakaiproject.trainingsupport.HBMMappingList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingStatus.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingJobTitle.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingRoster.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingSectionOrder.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingRosterBase.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingRosterDiff.hbm.xml</value>
                <value>org/sakaiproject/trainingsupport/dao/hbm/TrainingRosterJobTitle.hbm.xml</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- create a DAO bean, use the hibernate implementation -->
    <bean id="org.sakaiproject.trainingsupport.dao.TrainingDaoTarget"
            class="org.sakaiproject.trainingsupport.dao.TrainingDaoImpl"
            init-method="init">
        <property name="sessionFactory" 
            ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        <property name="persistentClasses">
            <list>
                <value>org.sakaiproject.trainingsupport.model.TrainingStatus</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingJobTitle</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingRoster</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingSectionOrder</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingRosterBase</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingRosterDiff</value>
                <value>org.sakaiproject.trainingsupport.model.TrainingRosterJobTitle</value>
            </list>
        </property>
    </bean>

	<!-- This wraps our DAO so that the transactions are managed -->
	<bean id="org.sakaiproject.trainingsupport.dao.TrainingDao"
			class="org.sakaiproject.genericdao.springutil.CurrentClassLoaderTxProxyFactoryBean">
		<property name="transactionManager" 
			ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		<property name="target" 
			ref="org.sakaiproject.trainingsupport.dao.TrainingDaoTarget" />
		<property name="transactionAttributes">
			<props>
                <prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="find*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="count*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<!-- create a data preloading bean that has transaction protection -->
	<bean id="org.sakaiproject.trainingsupport.dao.PreloadData"
			class="org.sakaiproject.trainingsupport.dao.PreloadDataImpl"
			init-method="init">
		<property name="dao"
			ref="org.sakaiproject.trainingsupport.dao.TrainingDao" />
	</bean>

</beans>
