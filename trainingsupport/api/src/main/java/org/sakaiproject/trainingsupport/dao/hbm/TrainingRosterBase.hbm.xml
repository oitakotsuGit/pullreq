<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- put your value object in the class name, 
		the table name is optional but you should specify it to avoid collisions -->
	<class
		name="org.sakaiproject.trainingsupport.model.TrainingRosterBase"
		table="training_roster_base">

		<!-- create the primary key id, using native is typically the best way -->
		<id name="id" type="long">
			<generator class="native">
				<param name="sequence">training_ROSTER_ID_SEQ</param>
			</generator>
		</id>
		<property name="siteId" type="string" length="255" column="site_id" not-null="true"/>
		<property name="sectionId" type="string" length="255" column="section_id" not-null="true"/>
		<property name="userEid" type="string" length="255" column="user_eid" not-null="true"/>
		<property name="title" type="string" length="255" column="title"/>
		<property name="title1" type="string" length="255" column="title1"/>
		<property name="title2" type="string" length="255" column="title2"/>
		<property name="title3" type="string" length="255" column="title3"/>
		<property name="version" type="long" column="version" not-null="true"/>
	</class>
	<query name="getLatestVersion">
		<![CDATA[
		select max(t.version) as latest_version
		  from org.sakaiproject.trainingsupport.model.TrainingRosterBase t
		 where t.siteId = :siteId
		]]>
	</query>
	<query name="deleteOutdatedRosterBase">
		<![CDATA[
		delete org.sakaiproject.trainingsupport.model.TrainingRosterBase t
		 where t.siteId = :siteId
		   and t.version < :latestVersion
		]]>
	</query>
</hibernate-mapping>

