<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- put your value object in the class name, 
		the table name is optional but you should specify it to avoid collisions -->
	<class name="org.sakaiproject.trainingsupport.model.TrainingJobTitle"
			table="training_job_title">

		<!-- create the primary key id, using native is typically the best way -->
		<id name="id" type="long">
	    	<generator class="native">
                <param name="sequence">training_JOBTITLE_ID_SEQ</param>
	    	</generator>
		</id>
		<property name="jobTitle" type="string" length="255" column="job_title" not-null="true" index="trainingJobTitleIndex" unique-key="TRAING_TITLE_KEY"/>
		<property name="jobTitlePattern" type="string" length="255" column="job_title_pattern" index="trainingJobTitlePatternIndex" unique-key="TRAING_TITLE_KEY"/>
		<property name="viewRank" type="integer" column="view_rank" />
	</class>
	<query name="findJobtitleByPattern">
	<![CDATA[from org.sakaiproject.trainingsupport.model.TrainingJobTitle jobTitle
		where jobTitle.jobTitlePattern = :jobTitlePattern]]>
  	</query>
  	<query name="findJobtitleById">
	<![CDATA[from org.sakaiproject.trainingsupport.model.TrainingJobTitle jobTitle
		where jobTitle.id = :id]]>
  	</query>
</hibernate-mapping>
