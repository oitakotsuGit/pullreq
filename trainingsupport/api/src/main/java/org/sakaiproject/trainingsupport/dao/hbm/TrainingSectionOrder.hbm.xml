<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- put your value object in the class name, 
		the table name is optional but you should specify it to avoid collisions -->
	<class name="org.sakaiproject.trainingsupport.model.TrainingSectionOrder"
			table="training_section_order">

		<!-- create the primary key id, using native is typically the best way -->
		<id name="id" type="long">
	    	<generator class="native">
                <param name="sequence">training_SECTIONORDER_ID_SEQ</param>
	    	</generator>
		</id>
		<property name="siteId" type="string" length="255" column="site_id" not-null="true" index="trainingSectionOrderIndex"/>
		<property name="sectionId" type="string" length="255" column="section_id" not-null="true" index="trainingSectionOrderIndex" unique-key="TRAING_SECTION_ID_KEY"/>
		<property name="viewRank" type="integer" column="view_rank" />
	</class>

	<query name="findSectionOrderBySectionId">
	<![CDATA[from org.sakaiproject.trainingsupport.model.TrainingSectionOrder sectionOrder
		where sectionOrder.sectionId = :sectionId]]>
  	</query>

	<query name="findSectionOrderBySiteId">
	<![CDATA[from org.sakaiproject.trainingsupport.model.TrainingSectionOrder sectionOrder
		where sectionOrder.siteId = :siteId]]>
  	</query>
</hibernate-mapping>
